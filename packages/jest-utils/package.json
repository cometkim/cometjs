{
  "name": "@cometjs/jest-utils",
  "description": "CometKim's utility collections for Jest",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cometkim/cometjs.git",
    "directory": "packages/jest-utils"
  },
  "author": {
    "name": "Hyeseong Kim",
    "email": "hey@hyeseong.kim"
  },
  "scripts": {
    "lint": "eslint .",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "build": "concurrently \"yarn:build:*\"",
    "build:dts": "tsc --emitDeclarationOnly",
    "build:node": "babel src --extensions .ts --out-dir lib --source-maps",
    "prepack": "rm -rf lib && yarn build"
  },
  "publishConfig": {
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "access": "public"
  },
  "files": [
    "src",
    "lib"
  ],
  "peerDependencies": {
    "jest": ">=20.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.21",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "typescript": "^4.1.3"
  }
}
