  "version": "2.2.1",
  "license": "MIT",
  "homepage": "https://github.com/cometkim/cometjs/tree/main/packages/react-utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cometkim/cometjs.git",
    "directory": "packages/react-utils"
  },
  "author": {
    "name": "Hyeseong Kim",
    "email": "hey@hyeseong.kim"
  },
  "sideEffects": false,
  "main": "./src/index.ts",
  "publishConfig": {
    "access": "public",
    "main": "./lib/index.mjs",
