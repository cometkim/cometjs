{
  "name": "@cometjs/react-utils",
  "description": "cometjs utility collection for React",
  "version": "2.0.3",
  "license": "MIT",
  "homepage": "https://github.com/cometkim/cometjs/tree/main/packages/react-utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cometkim/cometjs.git",
    "directory": "packages/react-utils"
  },
  "author": {
    "name": "Hyeseong Kim",
    "email": "hey@hyeseong.kim"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./src/index.ts",
  "types": "./lib/index.d.ts",
  "publishConfig": {
    "access": "public",
    "type": "module",
    "main": "./lib/index.mjs"
  },
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsc --emitDeclarationOnly && nanobundle build --dts=false",
    "prepack": "rm -rf lib && yarn build"
  },
  "files": [
    "src",
    "lib"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@cometjs/core": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "c8": "^7.11.0",
    "nanobundle": "^0.0.27",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-error-boundary": "^3.1.0",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.6.0"
  }
}
